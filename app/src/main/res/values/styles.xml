<resources>

    <style name="AppThemeBlack" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black_primary</item>
        <item name="colorButtonNormal">@color/black_primary</item>
        <item name="android:textColor">@color/black_accent</item>
        <item name="colorAccent">@color/black_accent</item>
        <item name="android:windowBackground">@color/black_primary_dark</item>
        <item name="android:spinnerStyle">@style/SpinnerStyleBlack</item>
        <item name="android:buttonTint">@color/black_accent</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorButtonNormal">@color/green_primary</item>
        <item name="android:textColor">@color/green_accent</item>
        <item name="colorAccent">@color/green_accent</item>
        <item name="android:windowBackground">@color/green_primary_dark</item>
        <item name="android:spinnerStyle">@style/SpinnerStyleGreen</item>
        <item name="android:buttonTint">@color/green_accent</item>
    </style>

    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorButtonNormal">@color/blue_primary</item>
        <item name="android:textColor">@color/blue_accent</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="android:windowBackground">@color/blue_primary_dark</item>
        <item name="android:spinnerStyle">@style/SpinnerStyleBlue</item>
        <item name="android:buttonTint">@color/blue_accent</item>
    </style>

    <style name="AppThemeRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorButtonNormal">@color/red_primary</item>
        <item name="android:textColor">@color/red_accent</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="android:windowBackground">@color/red_primary_dark</item>
        <item name="android:spinnerStyle">@style/SpinnerStyleRed</item>
        <item name="android:buttonTint">@color/red_accent</item>
    </style>

    <style name="SpinnerStyleBlack" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/black_primary</item>
        <item name="android:background">@color/black_primary</item>
    </style>

    <style name="SpinnerStyleGreen" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/green_primary</item>
        <item name="android:background">@color/green_primary</item>
    </style>

    <style name="SpinnerStyleBlue" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/blue_primary</item>
        <item name="android:background">@color/blue_primary</item>
    </style>

    <style name="SpinnerStyleRed" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/red_primary</item>
        <item name="android:background">@color/red_primary</item>
    </style>
</resources>
